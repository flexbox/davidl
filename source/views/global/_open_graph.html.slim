meta property="dc:creator"      content="#{data.settings.site.author}"
meta property="dc:format"       content="text/html"
meta property="dc:language"     content="fr-FR"

meta property="og:site_name"    content="#{data.settings.site.title}"
meta property="og:type"         content="website"
meta property="og:url"          content="#{data.settings.site.url}"
meta property="og:title"        content="#{current_page.data.title || data.settings.site.title}"
meta property="og:description"  content="#{current_page.data.description || data.settings.site.description}"
meta property="og:image"        content="#{current_page.data.image}"

meta name="geo.position"        content="50.629250;3.057256"
meta name="geo.placename"       content="Lille, Nord"
meta name="geo.region"          content="FR-59"

meta name="twitter:site"        content="#{data.settings.social.twitter.name}"
meta name="twitter:title"       content="#{current_page.data.title || data.settings.site.title}"
meta name="twitter:description" content="#{current_page.data.description || data.settings.site.description}"
- if current_page.data.image
  meta name="twitter:card"        content="summary_large_image"
  meta name="twitter:image:src"   content="#{current_page.data.image}"
  meta name="twitter:creator"     content="#{data.settings.social.twitter.name}"
- else
  meta name="twitter:card"        content="summary"
  meta name="twitter:image"       content="#{current_page.data.image}"


meta itemprop="name"            content="#{current_page.data.title || data.settings.site.title}"
meta itemprop="description"     content="#{current_page.data.description || data.settings.site.description}"
meta itemprop="image"           content="#{current_page.data.image}"

link rel="publisher" href="#{data.settings.social.google_plus}"
link rel="alternate" href="#{data.settings.social.rss.url}" type="application/rss+xml" title="#{data.settings.site.title}"
